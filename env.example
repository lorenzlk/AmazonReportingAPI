# Amazon Associates Credentials
AMAZON_EMAIL=your-email@example.com
AMAZON_PASSWORD=your-password-here

# Account Configuration
# Option 1: Comma-separated list of account IDs
ACCOUNTS_CONFIG=account-1,account-2,account-3

# Option 2: JSON string (alternative)
# ACCOUNTS_CONFIG='[{"id":"account-1","name":"Primary","sheetId":"..."},{"id":"account-2","name":"Secondary","sheetId":"..."}]'

# Google Sheet IDs (one per account)
SHEET_ID_ACCOUNT-1=your-google-sheet-id-here
SHEET_ID_ACCOUNT-2=your-google-sheet-id-here
SHEET_ID_ACCOUNT-3=your-google-sheet-id-here

# Google API Credentials (if not using Pipedream's built-in auth)
# GOOGLE_SHEETS_CREDENTIALS='{"type":"service_account","project_id":"...","private_key":"..."}'

# Scraper Configuration (optional overrides)
HEADLESS=true
EXTRACT_PRODUCTS=true
MAX_PRODUCTS=100
DELAY_BETWEEN_ACCOUNTS=3000

# Feature Flags
TAKE_SCREENSHOTS=true
VERBOSE_LOGGING=true

